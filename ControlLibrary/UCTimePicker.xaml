<UserControl x:Class="ControlLibrary.UCTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Column="0" Name="cbbHours" Margin="0,0,4,0" FontSize="18"/>
        <TextBlock Grid.Column="1" Text=":" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <ComboBox Grid.Column="2" Name="cbbMinutes" Margin="2,0,2,0" FontSize="18"/>
        <TextBlock Grid.Column="3" Text=":" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <ComboBox Grid.Column="4" Name="cbbSeconds" Margin="4,0,0,0" FontSize="18"/>
    </Grid>
</UserControl>
