<Window x:Class="GUI.BaoCao.LichSuBanHang.WindowLichSuBanHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:ControlLibrary;assembly=ControlLibrary"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        Title="WindowLichSuBanHang" Height="768" Width="1024" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <my:UCTile Name="uCTile" Grid.Row="0" Grid.Column="0" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Ngày" Width="100" Margin="10,0" />
            <DatePicker  Name="dtpNgay" Width="300" />

        </StackPanel>
        <WindowsFormsHost  Grid.Row="1" Name="ReportData" Margin="10,0,-10,30" Grid.RowSpan="2">
            <rv:ReportViewer x:Name="ReportViewerData" ZoomMode="PageWidth" />
        </WindowsFormsHost>
    </Grid>
</Window>
