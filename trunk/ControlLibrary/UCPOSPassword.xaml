<UserControl x:Class="ControlLibrary.UCPOSPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"              
             Padding="0" 
             Background="White"
             BorderBrush="#FF56007C"                            
             BorderThickness="2" d:DesignWidth="182">
    <PasswordBox 
        Name="passwordBox1" 
        VerticalAlignment="Stretch" 
        VerticalContentAlignment="Center" 
        HorizontalAlignment="Stretch" 
        HorizontalContentAlignment="Left"
        Margin="0"
        BorderThickness="0"
        Height="35" PasswordChanged="passwordBox1_PasswordChanged" PreviewMouseDown="passwordBox1_PreviewMouseDown" PreviewTextInput="passwordBox1_PreviewTextInput" />
</UserControl>
